.jumbotron.masthead
  .container
    h1 Tysensus
    p Website of developer & writer, L8D.
      br
      | Using Serif fonts like a boss.
.container-fluid
  br
  .row-fluid
    .span2.offset1
      ul.nav.nav-tabs.nav-stacked
        li
          a(href='//github.com/L8D') Github
        li
          a(href='//twitter.com/TenorB') Twitter
        li
          a(href='//github.com/L8D/delvs') 
            i.icon-github
            |  Delvs
        li
          a(href='#')
            i.icon-code-fork
            |  Greefr
    .span8
      .tabable
        ul.nav.nav-tabs
          - each post in site.posts
            - if(post.title == "PRISM")
              li.active
                a(data-toggle="tab", href="##{post.location}")= post.title
            - else
              li
                a(data-toggle="tab", href="##{post.location}")= post.title
        .tab-content
          - each post in site.posts
            - if(post.title == "PRISM")
              .tab-pane.active(id="#{post.location}")
                != post.content
            - else
              .tab-pane(id="#{post.location}")
                != post.content
